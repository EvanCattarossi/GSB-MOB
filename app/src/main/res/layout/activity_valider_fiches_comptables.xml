<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Titre -->
            <TextView
                android:text="Fiches de frais par visiteur"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0D2B5C"
                android:layout_marginBottom="24dp" />

            <!-- En-tÃªte tableau -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#EEEEEE"
                android:padding="8dp">

                <TextView android:text="Nom"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />
                <TextView android:text="Mois"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />
                <TextView android:text="Montant"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />
                <TextView android:text="Action"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Ligne 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">



                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:text="@string/rembourser"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_green_button"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:text="@string/refuser"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:background="@drawable/rounded_red_button" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</HorizontalScrollView>
